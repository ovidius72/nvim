{
  "tsserver.formatOnType": false,
  "typescript.suggest.autoImports": true,
  "typescript.suggest.enabled": true,
  "javascript.suggest.autoImports": true,
  "python.jediEnabled": false,
  "diagnostic.enable": true,
  "diagnostic.checkCurrentLine": true,
  "git.enableGlobalStatus": false,
  "git.addedSign.hlGroup": "GitGutter",
  "git.changedSign.hlGroup": "GitGutterChange",
  "git.removedSign.hlGroup": "GitGutterDelete",
  "git.topRemovedSign.hlGroup": "GitGutterDelete",
  "git.changeRemovedSign.hlGroup": "GitGutterChangeDelete",
  "smartf.timeout": 2200,
  "translator.toLang": "it",
  "translator.engines": [
    "bing",
    "google"
  ],
  "explorer.buffer.showHiddenBuffers": false,
  "explorer.icon.enableNerdfont": true,
  "explorer.openAction.select.filterFloatWindows": false,
  "explorer.file.column.git.icon.added": "✚",
  "explorer.file.column.git.icon.untracked": "✭",
  "explorer.file.column.git.icon.modified": "",
  "explorer.file.column.git.icon.deleted": "✖",
  "explorer.file.column.git.icon.mixed": "≈",
  "explorer.file.column.git.icon.copied": "➜",
  "explorer.file.column.git.icon.renamed": "➜",
  "explorer.file.column.git.icon.unmerged": "═",
  "languageserver": {
    "ccls": {
      "command": "ccls",
      "filetypes": ["c", "cpp", "objc", "objcpp"],
      "rootPatterns": [".ccls", "compile_commands.json", ".vim/", ".git/", ".hg/"],
      "initializationOptions": {
        "cache": {
          "directory": "/tmp/ccls"
        },
        "clang": {
          "resourceDir": "/Library/Developer/CommandLineTools/usr/lib/clang/10.0.0",
          "extraArgs": [
            "-isystem",
            "/Applications/Xcode.app/Contents/Developer/Toolchains/XcodeDefault.xctoolchain/usr/include/c++/v1",
            "-I",
            "/Applications/Xcode.app/Contents/Developer/Platforms/MacOSX.platform/Developer/SDKs/MacOSX.sdk/usr/include/"        
          ]
        }
      }
    },
    "phplang": {
      "command": "php",
      "args": [
        "/Users/antonio/php-language-server/vendor/felixfbecker/language-server/bin/php-language-server.php"
      ],
      "filetypes": ["php"]
    },
    "reason": {
      "command": "/Users/antonio/reason-language-server/reason-language-server",
      "filetypes": ["reason", "re"]
    },
    "ocaml": {
      "command": "ocaml-language-server",
      "args": ["--stdio"],
      "filetypes": ["ocaml", "reason"]
    }
  },
  "git.enableGutters": true
}
