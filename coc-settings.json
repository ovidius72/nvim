{
  "tsserver.formatOnType": false,
  "typescript.suggest.autoImports": true,
  "typescript.suggest.enabled": true,
  "javascript.suggest.autoImports": true,
  "python.jediEnabled": false,
  "diagnostic.enable": true,
  "diagnostic.checkCurrentLine": true,
  "diagnostic.displayByAle": false,
  "codeLens.enable": true,
  "diagnostic.level": "hint",
  "diagnostic.hintSign": "🚀",
  "diagnostic.infoSign": "⭐",
  "diagnostic.errorSign":"🐞",
  "diagnostic.warningSign": "️️⚡",
  "git.enableGlobalStatus": false,
  "explorer.file.column.git.icon.added": "✚",
  "explorer.file.column.git.icon.untracked": "◎",
  "explorer.file.column.git.icon.modified": "✐",
  "explorer.file.column.git.icon.deleted": "🗷", 
  "explorer.file.column.git.icon.mixed": "⁉",
  "explorer.file.column.git.icon.copied": "➜",
  "explorer.file.column.git.icon.renamed": "®",
  "explorer.file.column.git.icon.unmerged": "🗈",
  "explorer.openAction.select.filterFloatWindows": false,
  "explorer.buffer.showHiddenBuffers": false,
  "explorer.icon.enableNerdfont": true,
  "snippets.extends": {
    "cpp": ["c"],
    "javascriptreact": ["javascript"],
    "typescriptreact": ["javascript"],
    "typescript": ["javascript"]
  },
  "languageserver": {
    "reason": {
      "command": "reason-language-server",
      "filetypes": ["reason"]
    },
    "ccls": {
      "command": "ccls",
      "filetypes": ["c", "cpp", "objc", "objcpp"],
      "rootPatterns": [".ccls", "compile_commands.json", ".vim/", ".git/", ".hg/"],
      "initializationOptions": {
         "cache": {
           "directory": "/tmp/ccls"
         }
       }
    },
    "phplang": {
      "command": "php",
      "args": [
        "/usr/bin/php-language-server"
      ],
      "filetypes": ["php"]
    }
  },
  "git.enableGutters": true
}
