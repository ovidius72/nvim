{
  "typescript.suggest.autoImports": true,
  "typescript.suggest.enabled": true,
  "tsserver.formatOnType": true,
  "typescript.showUnused": true,
  "javascript.suggest.autoImports": true,
  "python.jediEnabled": false,
  "diagnostic.enable": true,
  "signature.enable": true,
  "signature.target":"echo",
  "diagnostic.checkCurrentLine": true,
  "git.signOffset": 1,
  "git.enableGlobalStatus": true,
  "yaml.completion": false,
  "diagnostic.displayByAle": false,
  "diagnostic.level": "hint",
  "diagnostic.locationlist": true,
  "diagnostic.enableMessage": "always",
  "diagnostic.refreshOnInsertMode": false,
  "yank.enableCompletion": false,
  "explorer.file.column.git.icon.added": "‚úö",
  "explorer.file.column.git.icon.untracked": "‚óé",
  "explorer.file.column.git.icon.modified": "‚úê",
  "explorer.file.column.git.icon.deleted": "üó∑", 
  "explorer.file.column.git.icon.mixed": "‚Åâ",
  "explorer.file.column.git.icon.copied": "‚ûú",
  "explorer.file.column.git.icon.renamed": "¬Æ",
  "explorer.file.column.git.icon.unmerged": "üóà",
  "explorer.openAction.select.filterFloatWindows": false,
  "explorer.buffer.showHiddenBuffers": false,
  "explorer.icon.enableNerdfont": true,
  "explorer.file.showHiddenFiles": true,
  "snippets.extends": {
    "cpp": ["c"],
    "python": ["py", "html"],
    "javascriptreact": ["javascript"],
    "typescriptreact": ["javascript"],
    "typescript": ["javascript"]
  },
  "languageserver": {
    "reason": {
      "command": "reason-language-server",
      "filetypes": ["reason"]
    },
    "ccls": {
      "command": "ccls",
      "filetypes": ["c", "cpp", "objc", "objcpp"],
      "rootPatterns": [".ccls", "compile_commands.json", ".vim/", ".git/", ".hg/"],
      "initializationOptions": {
         "cache": {
           "directory": "/tmp/ccls"
         }
       }
    },
    "phplang": {
      "command": "php",
      "args": [
        "/usr/bin/php-language-server"
      ],
      "filetypes": ["php"]
    }
  },
  "git.enableGutters": true
}
